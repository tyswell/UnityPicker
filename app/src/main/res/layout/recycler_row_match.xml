<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:paddingLeft="30dp"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/titleContentView"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#06A3C4"
        android:layout_below="@+id/searchWordView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/webNameView"
        android:layout_below="@+id/titleContentView"
        android:textSize="14dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/timeDescView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_below="@+id/webNameView"/>
    <ImageButton
        android:id="@+id/optionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/webNameView"
        android:layout_alignParentRight="true"
        android:src="@drawable/com_facebook_button_icon"/>

</RelativeLayout>