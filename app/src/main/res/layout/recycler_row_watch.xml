<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/watchStatusImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/watchStatusView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/watchStatusImage"/>
    <TextView
        android:id="@+id/searchWordView"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/watchStatusView"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/countFoundView"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/searchWordView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/timeDescView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countFoundView"/>
    <ImageButton
        android:id="@+id/optionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countFoundView"
        android:layout_alignParentRight="true"
        android:src="@drawable/com_facebook_button_icon"/>

</RelativeLayout>