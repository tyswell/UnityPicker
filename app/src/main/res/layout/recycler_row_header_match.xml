<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/searchWordView"
        android:paddingLeft="30dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/imageSearchType"
        android:paddingLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchWordView"/>
    <TextView
        android:id="@+id/descSearchType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageSearchType"
        android:paddingBottom="10dp"
        android:layout_below="@+id/searchWordView"
        android:textSize="16sp"/>
    <ImageView
        android:id="@+id/watchStatusImage"
        android:paddingLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageSearchType"/>
    <TextView
        android:id="@+id/watchStatusView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageSearchType"
        android:paddingBottom="10dp"
        android:layout_toRightOf="@+id/watchStatusImage"/>
    <TextView
        android:id="@+id/timeDescView"
        android:paddingLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:paddingBottom="20dp"
        android:layout_below="@+id/watchStatusView"/>

    <Button
        android:id="@+id/stopWatchBtn"
        android:textColor="#06A3C4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeDescView"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_shape"
        android:text="@string/stop_watching"/>
    <Button
        android:id="@+id/deleteWatchingBtn"
        android:textColor="#06A3C4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stopWatchBtn"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_shape"
        android:text="@string/delete"/>


</RelativeLayout>